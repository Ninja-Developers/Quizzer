{
    "compilerOptions": {
        "lib": [
            "es6",
            "dom",
            "es2015"
        ],
        "module": "commonjs",
        "noImplicitReturns": true,
        "outDir": "dist",
        "sourceMap": true,
        "target": "es6",
        "rootDir": "src",
        "moduleResolution": "node",
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true
    },
    "compileOnSave": true,
    "exclude": [
        "../node_modules",
        "test",
        "fixtures"
    ]
}